source "https://rubygems.org"

# O Jekyll em si
gem "jekyll"

# O 'github-pages' meta-gem inclui todas as dependências que o GitHub Pages usa
# Mantenha-o sempre atualizado para garantir compatibilidade total.
# A versão (ex: ~> 224) pode mudar, mas o GitHub Pages lida com isso.
gem "github-pages", group: :jekyll_plugins
